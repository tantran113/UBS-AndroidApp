<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yenpham.ubs.menu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorHomeButtonTextColor"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/colorHomeButtonTextColor"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="center_horizontal">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_margin="5pt"
                android:gravity="center_horizontal"
                >
                <Button
                    android:id="@+id/formClub"
                    android:layout_width="67dp"
                    android:layout_height="68dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/house"
                    android:text=""
                    />

                <TextView
                    android:layout_width="252dp"
                    android:layout_height="match_parent"
                    android:textSize="10pt"
                    android:text="FORM CLUB"
                    android:gravity="bottom"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:paddingLeft="19pt"
                    android:paddingBottom="10pt"
                    />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_margin="5pt"
                android:gravity="bottom">

                <Button
                    android:id="@+id/classified"
                    android:layout_width="61dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@drawable/classified"
                    android:text=""
                    android:textSize="10pt"
                    android:textColor="@color/colorHomeButtonTextColor"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="266dp"
                    android:layout_height="match_parent"
                    android:textSize="10pt"
                    android:text="CLASSIFIED"
                    android:gravity="bottom"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:paddingLeft="20pt"
                    android:paddingBottom="10pt"
                    />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_margin="5pt"
                android:gravity="bottom">

                <Button
                    android:id="@+id/aboutUs"
                    android:layout_width="74dp"
                    android:layout_height="62dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/aboutus"
                    android:text=""
                    android:textSize="10pt"
                    android:textColor="@color/colorHomeButtonTextColor"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="266dp"
                    android:layout_height="match_parent"
                    android:textSize="10pt"
                    android:text="CONTACT US"
                    android:gravity="bottom"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:paddingLeft="17pt"
                    android:paddingBottom="10pt"
                    android:id="@+id/textView2" />

            </GridLayout>

            <ImageView
                android:layout_width="290dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/horse1"
                android:id="@+id/imageView2"
                android:layout_weight="0.25" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                android:background="@drawable/common_google_signin_btn_text_dark_normal"

                android:text="@string/btn_logout_from_google"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:textStyle="bold"
                android:textSize="7pt"
                android:id="@+id/logout" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
